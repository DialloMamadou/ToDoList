        <TextView
            android:id="@+id/titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            android:text="titre"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titre"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:text="description"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp" />


            <Button
                android:id="@+id/buttonPartager"
                android:layout_width="31dp"
                android:layout_height="26dp"
                android:onClick="btnpartager"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="80dp"
                android:background="@drawable/ic_icons8_partager"
                />
            <Button
                android:id="@+id/buttonModifier"
                android:layout_width="31dp"
                android:layout_height="26dp"
                android:onClick="btnmadifier"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/ic_icons8_modifier"
                />

            <Button
                android:id="@+id/buttonSupprimer"
                android:layout_width="31dp"
                android:layout_height="27dp"
                android:onClick="btnsupprimer"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:textAlignment="viewEnd"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/ic_icons8_supprimer" />


    </RelativeLayout>

</android.support.v7.widget.CardView>